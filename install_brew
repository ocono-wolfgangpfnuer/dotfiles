#! /bin/sh

brew update
brew upgrade
brew install \
    curl \
    bash \
    bash-completion \
    git \
    htop \
    python \
    python3 \
    ruby \
    tree \
    wget \
    ngrep \
    macvim --override-system-vim --with-lua --withluajit \
    openssl \
    readline \
    ctags \
    jq \
    go \
    mercurial \
    ack \
    docker

brew reinstall --HEAD https://raw.github.com/neovim/neovim/master/neovim.rb
brew update
brew cleanup
